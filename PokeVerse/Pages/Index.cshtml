@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<body>
    <!-- Font Awesome Icon Library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet">
    <style>
        .checked {
            color: orange;
        }
    </style>

    <div class="landing-logo text-center">
        <img width="70%" src="~/images/pokemon-logo.png" />
    </div>
    <div class="text-center">
        <h1 class="display-4" style="font-family: 'VT323', monospace;">Welcome to PokeVerse!</h1>
        <p>GOTTA CATCH 'EM ALL!</p>
    </div>
    <div class="gif-container text-center">
        <img width="25%" src="~/images/pikachu-gif.gif" />
    </div>
    <center>
        <b><a asp-page="/Catalogue" style="font-family: 'VT323', monospace; font-size: 1.2em; color: #212529;">See Pokemon Catalogue</a></b><br />
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked py-2"></span>
    </center>

    <div id="carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/pokmeon-banner2.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/pokemon-go-banner2.jpg" alt="Second slide">
            </div>
            @*<div class="carousel-item">
                    <img class="d-block w-100" src="~/images/catchemall-banner.png" alt="Third slide">
                </div>*@
        </div>
        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>
    <br />
    <div class="card-deck">
        <div class="card">
            <img class="card-img-top" src="~/images/bulbasor.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Bulbasaur</h5>
                <p class="card-text">
                    Bulbasaur (Japanese: フシギダネ Fushigidane) is a dual-type Grass/Poison Pokémon introduced in Generation I.
                    It evolves into Ivysaur starting at level 16, which evolves into Venusaur starting at level 32.
                </p>
            </div>
            <div class="card-footer">
                @*<small class="text-muted">Last updated 3 mins ago</small>*@
                <button type="button" class="btn btn-outline-warning">PLAY CARD</button>
            </div>
        </div>
        <div class="card">
            <img class="card-img-top" src="~/images/pikachu.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">PIKACHU</h5>
                <p class="card-text">
                    Pikachu (Japanese: ピカチュウ Pikachu) is an Electric-type Pokémon introduced in Generation I.
                    It evolves from Pichu when leveled up with high friendship and evolves into Raichu when exposed to a Thunder Stone.
                </p>
            </div>
            <div class="card-footer">
                @*<small class="text-muted">Last updated 3 mins ago</small>*@
                <button type="button" class="btn btn-outline-warning">PLAY CARD</button>
            </div>
        </div>
        <div class="card">
            <img class="card-img-top" src="~/images/charmeleon.png" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">CHARMELEON</h5>
                <p class="card-text">
                    Charmeleon (Japanese: リザード Lizardo) is a Fire-type Pokémon introduced in Generation I.
                    It evolves from Charmander starting at level 16 and evolves into Charizard starting at level 36.
                </p>
            </div>
            <div class="card-footer">
                @*<small class="text-muted">Last updated 3 mins ago</small>*@
                <button type="button" class="btn btn-outline-warning">PLAY CARD</button>
            </div>
        </div>
    </div>
</body>